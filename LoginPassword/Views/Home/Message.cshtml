@model LoginPassword.Models.MessageUser

@{
    ViewData["Title"] = "Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Message</h1>

<h4>MessageUser</h4>
<hr />




<h2 style=" margin-top: 0.32rem; font-size: 2rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Create</h2>

<form asp-controller="Home" asp-action="Message" method="post" class="mt-3">

    <div class="form-group">
        <label asp-for="@Model.FullName" class="form-label"></label>
        <input asp-for="@Model.FullName" placeholder="FullName" type="text" class="form-control mb-3" />

        <label asp-for="@Model.Message" class="form-label"></label>
        <textarea asp-for="@Model.Message" placeholder="Message" class="form-control mb-3"></textarea>

        <input type="hidden" asp-for="@Model.Status" value="@MessageUserEnum.Admin" />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-controller="Home" asp-action="Userr" class="btn btn-primary">Back to</a>
    </div>

</form>