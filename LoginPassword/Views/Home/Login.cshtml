@model LoginPassword.Models.LoginPasswordd

<head>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<style>
    .loginhidden {
        display: none;
    }
</style>

<div class="login-box">
    <h2>Login</h2>
    <form asp-controller="Home" asp-action="Login" method="post">

        <div class="user-box">
            <input asp-for="@Model.Login" type="text" required="">
            <label asp-for="@Model.Login">Username</label>
        </div>
        <div class="user-box">
            <input asp-for="@Model.Password" type="password" required="">
            <label asp-for="@Model.Password">Password</label>
        </div>

        <button type="submit">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Submit
        </button>
    </form>
</div>