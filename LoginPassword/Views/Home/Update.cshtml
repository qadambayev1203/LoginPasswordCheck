@model LoginPassword.Models.LoginPasswordd

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style=" margin-top: 0.32rem; font-size: 2rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Update</h2>

<form asp-controller="Home" asp-action="Update" method="post" class="mt-3">

    <div class="form-group">
        <label asp-for="@Model.Login" class="form-label"></label>
        <input asp-for="@Model.Login" value="@Model.Login" type="text" class="form-control mb-3" />

        <label asp-for="@Model.Password" class="form-label"></label>
        <input asp-for="@Model.Password" value="@Model.Password" type="text" class="form-control mb-3" />

        @{
            if (Model.Role != LoginPasswordEnum.User)
            {
                <label asp-for="@Model.Role" class="form-label"></label>
                <select asp-for="@Model.Role" asp-items="Html.GetEnumSelectList<LoginPasswordEnum>()" class="form-control mb-3">
                    <option value="@Model.Role"></option>
                </select>
            }
            else
            {
                <input type="hidden" asp-for="@Model.Role" value="@LoginPasswordEnum.User" />
            }
        }
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-controller="Home" asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</a>
        @{
            if (Model.Role != LoginPasswordEnum.User)
            {
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to</a>
            }
            else
            {
                <a asp-controller="Home" asp-action="Userr" class="btn btn-primary">Back to</a>
            }
        }

    </div>

</form>


